@page "/"
@layout Shared.MainLayout

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <h1 class="header">Course Creation System</h1>
                <p class="flow-text">Manage your courses, users, and enrollments with a modern, responsive interface.</p>
                <a href="/courses" class="btn-large waves-effect waves-light blue">Get Started</a>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="row">
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">library_books</i></h2>
                    <h5 class="center">Courses</h5>
                    <p class="light">Add, edit, and manage courses effortlessly.</p>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">people</i></h2>
                    <h5 class="center">Users</h5>
                    <p class="light">Manage your teachers and students seamlessly.</p>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">assignment</i></h2>
                    <h5 class="center">Enrollments</h5>
                    <p class="light">Track enrollment and grade progress in real-time.</p>
                </div>
            </div>
        </div>
    </div>
</div>